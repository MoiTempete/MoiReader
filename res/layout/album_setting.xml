<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	android:background="@drawable/file_list_bg"
>
	<include layout="@layout/head"></include>
	<LinearLayout
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:layout_weight="1"
		android:gravity="center"
		android:orientation="vertical"
	>
		<ImageView
			android:id="@+id/ivAlbumFrame"
			android:layout_width="96dp"
			android:layout_height="136dp"
			android:src="@drawable/album_frame_5"
			android:scaleType="fitXY" />
		<Button
			android:id="@+id/btSelectAlbumFrame"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:background="@drawable/ef_add_bt"
			android:gravity="center"
			android:text="选择相框"
			android:layout_marginTop="10dp"
			android:textColor="#ffffff"
			android:textSize="18sp"
			android:textStyle="bold"
		></Button>
		<EditText
			android:id="@+id/etAlbumName"
			android:layout_marginTop="10dp"
			android:layout_width="200dp"
			android:layout_height="50dp"
			android:singleLine ="true"
			android:background="@drawable/ed_bg"
			android:hint="输入相册名称"
			android:gravity="center"
			android:textColorHint="#ffffff" />
	</LinearLayout>
	<LinearLayout
		android:layout_width="fill_parent"
		android:layout_height="80dp"
		android:gravity="center"
		android:background="@drawable/bottom_bg1"
		android:orientation="vertical"
	>
		<Button
			android:id="@+id/btComplite"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:background="@drawable/ef_add_bt"
			android:gravity="center"
			android:text="完成"
			android:textColor="#ffffff"
			android:textSize="18sp"
			android:textStyle="bold"
		></Button>
	</LinearLayout>
</LinearLayout>